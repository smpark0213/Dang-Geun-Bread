<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_menu_name"
        tools:text="메뉴 이름"
        android:layout_width = "100dp"
        android:layout_height = "wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginLeft="20dp"
        android:id="@+id/item_menu_count"
        tools:text="100 개"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_menu_name"
        app:layout_constraintBottom_toBottomOf="@id/item_menu_name"
        app:layout_constraintStart_toEndOf="@id/item_menu_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_menu_price"
        tools:text="9999 원"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>