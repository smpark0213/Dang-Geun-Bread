<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/signup05_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/default_orange"
                android:textSize="20sp">
            </TextView>
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup06_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="빵집의 오픈시간과 \n마감시간이 필요합니다!"
                android:textColor="@color/black"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/signup06_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="더 좋은 서비스를 위해 시간을 입력해주세요!\n"
                android:textColor="@color/gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/signup06_text03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="10시 30분 오픈인 경우,\n올림해서 11시로 입력해주세요.\n\n"
                android:textColor="@color/gray"
                android:textSize="18sp" />


            <!--                background : 버튼 누르면 물결 효과-->
            <EditText
                android:id="@+id/signup06_edittext01"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:backgroundTint="@color/default_orange"
                android:hint="오픈시간을 입력해주세요.(0~24)" />

            <EditText
                android:id="@+id/signup06_edittext02"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:backgroundTint="@color/default_orange"
                android:hint="마감시간을 입력해주세요.(0~24)" />

            <Button
                android:id="@+id/signup06_button01"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/all_button_bg_ripple_round_15"
                android:text="회원가입 완료하기"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

