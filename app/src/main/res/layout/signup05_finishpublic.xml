<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/signup05_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/default_orange"
                android:textSize="20sp">
            </TextView>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup05_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입이 끝났습니다"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/signup05_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당근빵의 회원이 되신걸 환영합니다.\n로그인 버튼을 눌러서 로그인해주세요!"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <!--                background : 버튼 누르면 물결 효과-->
            <Button
                android:id="@+id/signup05_button01"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/all_button_bg_ripple_round_15"
                android:text="로그인하기"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="RtlHardcoded" />


        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

